{
    "name": "api.wisataku.jazzle.me",
    "description": "WisataKu simple RESTful API",
    "authors": [
        {
            "name": "Jeje",
            "email": "jeje@jazzle.me"
        }
    ],
    "_comment": "Extras dan middleware untuk content type parsing and basic authentication. PHPUnit menggunakan versi lama (5.7), karena versi PHP yang dipakai versi 5.6.30. Custom classes di bawah namespace API lokasinya di direktori lib.",
    "require-dev": {
        "phpunit/phpunit": "5.7.*"
    },
    "archive": {
        "exclude": ["vendor", ".DS_Store", "*.log"]
    },
    "autoload": {
        "psr-4": {
            "WisataKu\\WisataKuAPI\\" : "src"
        }
    },
    "require": {
        "zircote/swagger-php": "^2.0",
        "slim/slim": "*",
        "slim/extras": "*",
        "slim/middleware": "*",
        "monolog/monolog": "*",
        "j4mie/paris": "*",
        "flynsarmy/slim-monolog": "*"
    }
}
