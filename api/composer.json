{
    "name": "api.wisataku.jazzle.me",
    "description": "WisataKu simple RESTful API",
    "authors": [
        {
            "name": "Jeje",
            "email": "jeje@jazzle.me"
        }
    ],
    "require-dev": {
        "slim/slim": "*",
        "slim/extras": "*", //untuk content type parsing and basic authentication
        "slim/middleware": "*",
        "monolog/monolog": "*",
        "j4mie/paris": "*",
        "flynsarmy/slim-monolog": "*",
        "phpunit/phpunit": "5.7.*" //Since we are using PHP version 5.6.30
    },
    "archive": {
        "exclude": ["vendor", ".DS_Store", "*.log"]
    },
    "autoload": {
        "psr-0": {
            "API": "lib/"
        }
    }
}

//Notes: custom classes di bawah namespace API lokasinya di direktori lib.